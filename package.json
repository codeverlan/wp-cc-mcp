{
  "name": "wp-cc-mcp",
  "version": "1.0.0",
  "description": "MCP server for WordPress development with Docker to Git to SiteGround pipeline",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "dev": "node --watch index.js",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules\" jest",
    "test:watch": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --watch",
    "test:coverage": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --coverage"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "collectCoverageFrom": [
      "lib/**/*.js",
      "index.js",
      "!lib/**/*.test.js"
    ]
  },
  "keywords": [
    "mcp",
    "wordpress",
    "docker",
    "claude-code",
    "development"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "better-sqlite3": "^11.6.0",
    "csv-parse": "^5.5.2",
    "dotenv": "^16.4.7",
    "execa": "^9.5.2",
    "form-data": "^4.0.4",
    "fs-extra": "^11.2.0",
    "keytar": "^7.9.0",
    "node-fetch": "^3.3.2",
    "simple-git": "^3.27.0",
    "winston": "^3.17.0",
    "yauzl": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@types/node": "^20.10.0",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  }
}
